node {
   stage('SCM') {
	  git branch: 'main', url: 'https://github.com/samalasaikrishna/spring-petclinic.git'
   }
   stage ('build the packages') {
	  sh 'mvn install'
          }
   stage ('Junit tests') {
     //performs junit test cases
        junit 'target/surefire-reports/*.xml'
        }
   stage ('archiving') {
     //archiving the artifacts
     archive 'target/*.jar'
     }
     stage ('sonar') {
    // performing sonarqube analysis with "withSonarQubeENV(<Name of Server configured in Jenkins>)"
    withSonarQubeEnv('SonarQube_scan') {
      // requires SonarQube Scanner for Maven 3.2+
      sh 'mvn org.sonarsource.scanner.maven:sonar-maven-plugin:3.2:sonar'
    }
  }
  stage ('JFrog_test') {
     rtUpload (
          serverId: 'JFrog',
           spec: '''{
              "files": [
                 {
                    "pattern": "spring-petclinic/*.zip",
                    "target": "http://54.212.113.220:8081/artifactory/libs-snapshot-local/"
                 }
                        ]
                     }''')
}
  
}
